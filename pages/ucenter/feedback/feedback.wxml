<view class="container">

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      <view class="fb-type">
        <view class="type-label">{{array[index]}}</view>
        <image class="type-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/pickerArrow-a8b918f05f.png"></image>

      </view>
    </view>
  </picker>
  <view class="fb-body">
    <textarea maxlength="500" class="content" bindinput='textareainput'  placeholder="如果您对我们的产品以及服务有任何的意见或建议，请在此处反馈！" />
    <view class="text-count">{{textarealength}}/500</view>
  </view>
  <view class="fb-mobile">
    <view class="label">手机号码</view>
    <view class="mobile-box">
      <input class="mobile" bindinput='mobileinput' placeholder="方便我们与你联系" />
      <!-- <image class="clear-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/clear-fb-dd9d604f86.png"></image> -->
    </view>
  </view>
    <view class="corner_btn_area" bindtap="okfeedback">
      <view class='corner_btn'>确定</view>
    </view>
  <!-- <button class="fb-btn" bindtap='okfeedback'>提交</button> -->
</view>