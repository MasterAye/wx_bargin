page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.order-info{
    padding-top: 25rpx;
    background: #fff;
    height: auto;
    overflow: hidden;
}
.refund_text {
  font-size: 24rpx;
  margin: 0 15rpx;
  color: #b4282d;
}
.item-a{
    padding-left: 31.25rpx;
    height: 42.5rpx;
    padding-bottom: 12.5rpx;
    line-height: 30rpx;
    font-size: 28rpx;
    color: #666;
}

.item-b{
    padding-left: 31.25rpx;
    height: 29rpx;
    line-height: 29rpx;
    margin-top: 12.5rpx;
    margin-bottom: 41.5rpx;
    font-size: 30rpx;
    color: #666;
}
.tip {
  color: #999;
  font-size: 10px;
  text-align: center;
}
.item-c{
    margin-left: 31.25rpx;
    border-top: 1px solid #f4f4f4;
    height: 103rpx;
    line-height: 103rpx;
}

.item-c .l{
    float: left;
}

.item-c .r{
    height: 103rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.item-c .r .btn{
    float: right;
}

.item-c .cost{
    color: #b4282d;
    font-size: 36rpx !important;
    font-weight: bold;
}

.item-c .btn{
    line-height: 66rpx;
    border-radius: 5rpx;
    text-align: center;
    margin: 0 15rpx;
    padding: 0 20rpx;
    height: 66rpx;
}

.item-c .btn.active{
    background: #b4282d;
    color: #fff;
}

.order-goods{
    margin-top: 10rpx;
    background: #fff;
}

.order-goods .h{
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
    padding-right: 31.25rpx;
}

.order-goods .h .label{
    float: left;
    font-size: 30rpx;
    color: #333;
}

.order-goods .h .status{
    float: right;
    font-size: 30rpx;
    color: #b4282d;
}

.order-goods .item{
    display: flex;
    align-items: center;
    height: 192rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-goods .item:last-child{
    border-bottom: none;
}

.order-goods .item .img{
    height: 145.83rpx;
    width: 145.83rpx;
    background: #f4f4f4;
}

.order-goods .item .img image{
    height: 145.83rpx;
    width: 145.83rpx;
}

.order-goods .item .info{
    flex: 1;
    height: 145.83rpx;
    margin-left: 20rpx;
}

.order-goods .item .t{
    margin-top: 8rpx;
    height: 66rpx;
    line-height: 33rpx;
    margin-bottom: 10.5rpx;
}

.order-goods .item .t .name{
    /* display: block; */
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    /* margin-bottom: 35rpx; */
    /* height: 33rpx; */
    /* line-height: 33rpx; */
    color: #333;
    font-size: 30rpx;
}

.order-goods .item .number{
    display: block;
    width: 20px;
    float: right;
    text-align: right;
    height: 33rpx;
    /* text-align: right; */
    line-height: 33rpx;
    color: #333;
    font-size: 30rpx;
}

.order-goods .item .attr{
    height: 29rpx;
    line-height: 29rpx;
    color: #666;
    /* margin-top: 10rpx; */
     margin-bottom: 10rpx; 
    font-size: 25rpx;
}

.order-goods .item .price{
   float: left;
    height: 30rpx;
    /* width:  */
    line-height: 30rpx;
    color: #333;
    font-size: 30rpx;
}

.order-bottom{
    margin-top: 10rpx;
    padding-left: 31.25rpx;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.order-bottom .address{
    height: 128rpx;
    padding-top: 25rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-bottom .address .t{
    height: 45rpx;
    line-height: 45rpx;
    margin-bottom: 7.5rpx;
}

.order-bottom .address .name{
    /* border: 1px solid #333; */
    display: inline-block;
    height: 38rpx;
    width: 20%;
    line-height: 38rpx;
    font-size: 25rpx;
}

.order-bottom .address .mobile{
    display: inline-block;
    height: 38rpx;
    line-height: 38rpx;
    font-size: 25rpx;
}

.order-bottom .address .b{
    height: 38rpx;
    line-height: 38rpx;
    font-size: 25rpx;
}

.order-bottom .total{
    height: auto;
    padding-top: 20rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-bottom .total .t{
    height: auto;
    line-height: 38rpx;
    margin-bottom: 7.5rpx;
    display: flex;
}

.order-bottom .total .label{
    width: 20%;
    display: inline-block;
    height: 38rpx;
    line-height: 38rpx;
    font-size: 25rpx;
}

.order-bottom .total .txt{
    flex: 1;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}
.order-bottom .total .resontxt{
    /* border: 1px solid #333; */
    flex: 1;
    display: inline-block;
    height: auto;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .pay-fee{
    height: 81rpx;
    line-height: 81rpx;
}

.order-bottom .pay-fee .label{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}

.order-bottom .pay-fee .txt{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}