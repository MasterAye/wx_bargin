<view wx:if="{{isbing}}">
  <view class='bingtitle'>您已绑定手机号</view>
  <image class='bing_image' src='../../../image/phonebing.png'></image>
  <view class='bingphone'>{{userinfo.mobile}}</view>
  <button size="mini" class='changebtn' type="default" disabled="{{changeisabled}}" bindtap="changed">
    更换绑定手机号
  </button>
</view>
<view wx:if="{{!isbing}}">
  <view class='bingtitle'>您还未绑定手机号</view>
  <image class='bing_image' src='../../../image/phonebing.png'></image>
  <view class='bingphone'>{{userinfo.mobile}}</view>
  <button size="mini" class='changebtn' type="default" disabled="{{changeisabled}}" bindtap="startBingPhone">
    立即绑定手机号
  </button>
</view>
<view class='mask_model' bindtap='hide_model' wx:if="{{show_mask}}"></view>
<view class='show_model' wx:if="{{show_mask}}">
  <view class='apply_dis_title'>绑定手机号</view>
