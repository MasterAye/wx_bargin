    <view class="b">
      <navigator class="item {{(iindex + 1) % 2 == 0 ? 'item-b' : ''}}" url="/pages/goods/goods?id={{iitem.id}}" wx:for="{{goodsList}}" wx:key="{{item.id}}" wx:for-item="iitem" wx:for-index="iindex">
        <image class="img" src="{{iitem.list_pic_url}}" ></image>
        <text class="name">{{iitem.name}}</text>
        <text class="price">￥{{iitem.retail_price}}</text>
      </navigator>
    </view>
  </view> -->
    </view>

    <view class="search-result-empty" wx:if="{{!goodsList.length && searchStatus}}">
        <image class="icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/noSearchResult-7572a94f32.png"></image>
        <text class="text">您寻找的商品还未上架</text>
    </view>
</scroll-view>
