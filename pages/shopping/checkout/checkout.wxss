.address-box {
  width: 100%;
  height: 166.55rpx;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png') 0 0 repeat-x;
  background-size: 62.5rpx 10.5rpx;
  margin-bottom: 20rpx;
  padding-top: 10.5rpx;
}

.tip {
  /* margin-top: -20rpx; */
  font-size: 12px;
  padding: 5rpx;
  text-align: center;
}

.address-item {
  display: flex;
  height: 155.55rpx;
  background: #fff;
  padding: 41.6rpx 0 41.6rpx 31.25rpx;
}

.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}

.address-box .l {
  width: 22.5%;
  height: 100%;
}

.address-box .l .name {
  margin-left: 6.25rpx;
  margin-top: -7.25rpx;
  display: block;
  width: 125rpx;
  overflow: hidden;
  height: 43rpx;
  line-height: 43rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.address-box .l .default {
  margin-left: 6.25rpx;
  display: block;
  width: 62rpx;
  height: 33rpx;
  border-radius: 5rpx;
  border: 1px solid #b4282d;
  font-size: 20.5rpx;
  text-align: center;
  line-height: 29rpx;
  color: #b4282d;
}

.address-box .m {
  flex: 1;
  height: 72.25rpx;
  color: #999;
}

.address-box .mobile {
  display: block;
  height: 29rpx;
  line-height: 29rpx;
  margin-bottom: 6.25rpx;
  font-size: 30rpx;
  color: #333;
}

.address-box .address {
  display: block;
  height: 37.5rpx;
  line-height: 37.5rpx;
  font-size: 25rpx;
  color: #666;
}

.address-box .r {
  width: 77rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-box .r image {
  width: 52.078rpx;
  height: 52.078rpx;
}

.coupon-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.coupon-box .coupon-item {
  width: 100%;
  height: 86.38rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  align-items: center;
  padding-left: 31.25rpx;
}

.coupon-box .l {
  flex: 1;
  height: 43rpx;
  line-height: 45rpx;
  /* padding-top: 35rpx; */
}

.coupon-box .l .name {
  float: left;
  font-size: 30rpx;
  color: #666;
}

.coupon-box .l .txt {
  float: right;
  font-size: 30rpx;
  color: #666;
}
.coupon-box .l .txt.ruls {
  font-size: 10rpx;
}
.coupon-box .r {
  /* margin-top: 15.5rpx; */
  width: 55rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon-box .r image {
  width: 42rpx;
  height: 42rpx;
}

.goods_length {
  /* border: 1px solid #333; */
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 23rpx;
  color: #757575;
  margin-bottom: 90rpx;
}
.tip_area {
  margin-top: 12.12vh;
}
.order_total_bar {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background: rgb(255, 255, 255);
  display: flex;
  align-items: center;
}

.order_total_bar .price {
  /* border: 1px solid #b43939; */
  padding: 0 30rpx;
  font-size: 25rpx;
  color: #444;
}

.order_total_bar .price .big {
  /* border: 1px sold black; *//* padding: 0 25rpx; */
  font-size: 46rpx;
  color: #fc2d2d;
  font-weight: bold;
}

.order_total_bar .acton {
  /* border: 1px solid #333; */
  position: absolute;
  right: 20rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: #f4f4f4;
  width: 180rpx;
  font-size: 28rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background-image: linear-gradient(to right, #ff7701 0%, #fe4800 100%);
}
